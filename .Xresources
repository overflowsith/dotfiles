! clean up urxvt, add keybinds
URxvt.intensityStyles: false
URxvt.scrollBar: false
URxvt.keysym.Shift-Up: command:\033]720;1\007
URxvt.keysym.Shift-Down: command:\033]721;1\007
URxvt.resize-font.smaller: C-Down
URxvt.resize-font.bigger: C-Up
URxvt.iso14755: false
URxvt.iso14755_52: false

! font
URxvt*font: xft:Fira\ Mono\ for\ Powerline:size=9,xft:FontAwesome:size=9
! URxvt*font: xft:Fira\ Mono\ for\ Powerline:size=9:antialias=true:hinting=true,xft:Fira\ Mono\ for\ Powerline:size=9:antialias=true:hinting=true
URxvt.letterSpace: -0.7
! terminal padding
URxvt.internalBorder: 10

! uncomment for transparent terminal if you are ready to be made fun of in #rice
! URxvt.transparent:  true
! URxvt.shading:    15

! make otf / ttf fonts look pretty.  does not matter if you are using a bitmap font.
Xft.autohint: 0
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintslight
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb

! clickable links, clipboard support, mouse wheel support, and on the fly font resizing
! you will need to install the relevent perl extensions for these to work
URxvt.perl-ext-common: default,matcher,clipboard,vtwheel,resize-font
URxvt.url-launcher: ~/.local/bin/firefox/firefox
URxvt.matcher.button: 1
URxvt.matcher.rend.0: Uline Bold fg5

! special
*.foreground:   #c5c8c6
*.background:   #1d1f21
*.cursorColor:  #c5c8c6

! black
*.color0:       #282a2e
*.color8:       #373b41

! red
*.color1:       #a54242
*.color9:       #cc6666

! green
*.color2:       #8c9440
*.color10:      #b5bd68

! yellow
*.color3:       #de935f
*.color11:      #f0c674

! blue
*.color4:       #5f819d
*.color12:      #81a2be

! magenta
*.color5:       #85678f
*.color13:      #b294bb

! cyan
*.color6:       #5e8d87
*.color14:      #8abeb7

! white
*.color7:       #707880
*.color15:      #c5c8c6

rofi.opacity:          90
rofi.width:            960
rofi.lines:            10
rofi.columns:          1
rofi.color-enabled:    true
rofi.font:             Fira Mono for Powerline  10
rofi.color-normal:     #1d1f21,#c5c8c6,#1d1f21,#50565b,#f0c674
!rofi.color-urgent:    #1e2127,#d79921,#1e2127,#d79921,#1e2127
rofi.color-active:     #f0c674,#1e2127,#f0c674,#f0c674,#50565b
rofi.color-window:     #1d1f21,#1d1f21
rofi.hide-scrollbar:   true
rofi.separator-style:  none
rofi.padding:          10
rofi.fuzzy:            false
rofi.pid:              /run/user/1000/rofi.pid
rofi.terminal:         urxvtc
rofi.ssh-command:      {terminal} -e {ssh-client} {host}
rofi.show:             drun,window,run,ssh
rofi.modi:             drun,window,run,ssh
rofi.dmenu:            true
rofi.kb-mode-next:     Shift+Right,Control+Tab
rofi.kb-mode-previous: Shift+Left,Control+Shift+Tab
